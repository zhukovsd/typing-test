doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title="typing-test"
        script(src="app.js")

        link(href="https://fonts.googleapis.com/css?family=Questrial", rel="stylesheet")
        link(href="https://fonts.googleapis.com/css?family=Roboto+Mono", rel="stylesheet")

        link(rel="stylesheet" href="style.css")

    body
        div.page-container
            h1 Typing test

            div.page-description Challenge your typing skills in 1 minute test. Have fun!


            div.test-ui
                div.words-container
                    - var n = 0;
                    while n < 0
                        - var text = "Word" + n;

                        if n < 23
                            if (Math.random() < 0.2)
                                div.task-word.task-word-incorrect= text
                            else
                                div.task-word.task-word-correct= text
                        else if n === 23
                            div.task-word.task-word-current= text
                        else
                            div.task-word= text

                        - n++;

                div.test-ui-footer
                    div.test-timer 1:00
                    input.test-ui-input(placeholder="type here")
                    div.restart-container
                        div.restart Restart

            div.test-stats
                div.speedometer
                    div.center
                        #bars.center
                            - var n = 0;
                            while n++ < 9
                                div.center.bar
                            //div.center.bar

                        #nums.center
                            - var n = 0;
                            while n++ < 5
                                div.center.num= n*10
                    div.pointer

                div.test-stats-footer
                    div.test-stats-value-description(title="test") CPM
                    div.test-stats-value#test-stats-value-cpm 400

                    div.test-stats-value-description WPM
                    div.test-stats-value#test-stats-value-wpm 75

                    div.test-stats-value-description(style="margin-right: 0;") Typos
                    div.test-stats-value#test-stats-value-typos(style="margin-right: 0;") 5